<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:background="#db7a18"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="71.5dp"
        android:id="@+id/linearLayout1" >
        <ImageButton
            android:background="@drawable/baca"
            android:layout_width="58.3dp"
            android:layout_height="58.3dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/back" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="634.7dp"
        android:id="@+id/linearLayout2">
        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/space1" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout5">
            <TextView
                android:text=" Article :  "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="95dp"
                android:background="@drawable/custombutton"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/textView1"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:background="@color/material_grey_300"
                android:id="@+id/spinner1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout6">
            <TextView
                android:text=" Réf : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/custombutton"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                 android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="20dp"
                android:id="@+id/textView6" />
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Réference"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColorHint="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
               android:layout_marginTop="5dp"
                android:paddingLeft="4dp"
                android:background="@color/material_grey_300"
                android:id="@+id/textInputEditText1"/>
        </LinearLayout>
        <Button
            android:text="Chercher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:background="@drawable/custombutton"
            android:layout_marginLeft="121.1dp"
            android:layout_marginRight="128.4dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="44.2dp"
            android:id="@+id/space3" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="43.4dp"
            android:id="@+id/linearLayout3">
            <TextView
                android:text="Quantité"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:layout_marginRight="40.8dp" />
            <TextView
                android:text="danone"
                android:textColor="@android:color/darker_gray"
                android:layout_width="196.6dp"
                android:layout_height="match_parent"
                android:id="@+id/textView4" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="51.8dp"
            android:id="@+id/linearLayout4">
            <TextView
                android:text="Prix"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:layout_marginRight="47.6dp" />
            <TextView
                android:text="50"
                android:layout_width="241.5dp"
                android:textColor="@android:color/darker_gray"
                android:layout_height="match_parent"
                android:id="@+id/textView5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
