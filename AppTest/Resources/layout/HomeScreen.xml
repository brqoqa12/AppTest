<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    android:minWidth="25px"
    android:minHeight="25px">
    <Space
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:id="@+id/space1" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:layout_marginLeft="35.5dp">
            <ImageButton
                android:src="@drawable/clerk"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:id="@+id/imageclient"
                android:background="@color/mtrl_btn_transparent_bg_color"
                android:layout_marginTop="25.0dp"
                android:layout_marginBottom="0.0dp" />
            <Button
                android:text="Client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnclient"
                android:background="@drawable/custombutton1"
                 />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:layout_marginLeft="20.5dp"
            android:layout_marginRight="0.0dp">
            <ImageButton
                android:src="@drawable/shoppingbag"
                android:layout_width="match_parent"
                android:layout_height="135.0dp"
                android:id="@+id/imagecommande"
                android:background="@color/mtrl_btn_transparent_bg_color"
                android:layout_marginTop="25.0dp"
                android:layout_marginBottom="0.0dp"/>
            <Button
                android:text="Commandes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btncommande"
                android:background="@drawable/custombutton1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="28.0dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout5"
            android:layout_marginLeft="34.0dp"
            android:layout_marginRight="0.0dp"
            android:layout_marginTop="0.0dp">
            <ImageButton
                android:src="@drawable/stock"
                android:layout_width="match_parent"
                android:layout_height="135.0dp"
                android:id="@+id/imagestock"
                android:background="@color/mtrl_btn_transparent_bg_color"
                android:layout_marginTop="25.0dp"
                android:layout_marginBottom="0.0dp"/>
            <Button
                android:text="Stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custombutton1"
                android:id="@+id/btnstock" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout6"
            android:layout_marginLeft="25.0dp">
            <ImageButton
                android:src="@drawable/statistics"
                android:layout_width="match_parent"
                android:layout_height="135.0dp"
                android:id="@+id/imagestats"
                android:background="@color/mtrl_btn_transparent_bg_color"
                android:layout_marginTop="25.0dp"
                android:layout_marginBottom="0.0dp"/>
            <Button
                android:text="Statistiques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnstats"
                android:background="@drawable/custombutton1"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="150dp"
        android:id="@+id/imageView1"
        android:layout_marginTop="30dp" />
    

</LinearLayout>
